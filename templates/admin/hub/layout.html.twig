{% extends 'base.html.twig' %}

{% block title %}{{ hub_title | default('Hub') }} â€” Mercuriale.io{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin-hub.css') }}">
{% endblock %}

{% block app_header %}{% endblock %}

{% block body %}
    <div class="hub-page">
        <header class="hub-header">
            <a href="{{ path('admin') }}">
                <img src="/images/logo-mercuriale-rectangulaire.png" alt="Mercuriale.io" class="hub-header__logo">
            </a>
        </header>

        <nav class="hub-breadcrumb">
            <a href="{{ path('admin') }}">Tableau de bord</a>
            <span class="hub-breadcrumb__sep">/</span>
            <span>{{ hub_title }}</span>
        </nav>

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="hub-flash hub-flash--{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block hub_content %}{% endblock %}
    </div>
{% endblock %}
