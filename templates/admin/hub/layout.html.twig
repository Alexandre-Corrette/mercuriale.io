{% extends 'base.html.twig' %}

{% block title %}{{ hub_title | default('Hub') }} â€” Mercuriale.io{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
    <link rel="stylesheet" href="{{ asset('css/admin-hub.css') }}">
{% endblock %}

{% block app_header %}{% endblock %}

{% block body %}
    <div class="hub-page">
        {% block hub_breadcrumb %}
            {% include 'admin/components/_breadcrumb.html.twig' with {
                breadcrumbs: hub_breadcrumbs | default([{ label: hub_title }])
            } %}
        {% endblock %}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="hub-flash hub-flash--{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% block hub_content %}{% endblock %}
    </div>
{% endblock %}
