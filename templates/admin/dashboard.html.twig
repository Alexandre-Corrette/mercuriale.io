{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Tableau de bord{% endblock %}

{% block main %}
<div class="row">
    <div class="col-12">
        <h1 class="mb-4">Bienvenue sur Mercuriale.io</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1">Bons de livraison</h6>
                        <h2 class="mb-0">-</h2>
                    </div>
                    <i class="fa fa-file-invoice fa-2x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\BonLivraisonCrudController').setAction('index') }}" class="text-white text-decoration-none small">Voir tout</a>
                <i class="fa fa-arrow-right text-white"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1">Alertes en attente</h6>
                        <h2 class="mb-0">-</h2>
                    </div>
                    <i class="fa fa-exclamation-triangle fa-2x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\AlerteControleCrudController').setAction('index') }}" class="text-dark text-decoration-none small">Voir tout</a>
                <i class="fa fa-arrow-right text-dark"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1">Produits</h6>
                        <h2 class="mb-0">-</h2>
                    </div>
                    <i class="fa fa-box fa-2x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProduitFournisseurCrudController').setAction('index') }}" class="text-white text-decoration-none small">Voir tout</a>
                <i class="fa fa-arrow-right text-white"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3 col-sm-6 mb-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase mb-1">Établissements</h6>
                        <h2 class="mb-0">-</h2>
                    </div>
                    <i class="fa fa-building fa-2x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                <a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\EtablissementCrudController').setAction('index') }}" class="text-white text-decoration-none small">Voir tout</a>
                <i class="fa fa-arrow-right text-white"></i>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Accès rapide</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6>Gestion des BL</h6>
                        <ul class="list-unstyled">
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\BonLivraisonCrudController').setAction('new') }}"><i class="fa fa-plus me-2"></i>Nouveau bon de livraison</a></li>
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\AlerteControleCrudController').setAction('index') }}"><i class="fa fa-exclamation-triangle me-2"></i>Gérer les alertes</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6>Mercuriale</h6>
                        <ul class="list-unstyled">
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\MercurialeCrudController').setAction('new') }}"><i class="fa fa-plus me-2"></i>Nouveau prix négocié</a></li>
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\ProduitFournisseurCrudController').setAction('new') }}"><i class="fa fa-plus me-2"></i>Nouveau produit fournisseur</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4">
                        <h6>Configuration</h6>
                        <ul class="list-unstyled">
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\UtilisateurCrudController').setAction('new') }}"><i class="fa fa-plus me-2"></i>Nouvel utilisateur</a></li>
                            <li><a href="{{ ea_url().setController('App\\\\Controller\\\\Admin\\\\FournisseurCrudController').setAction('new') }}"><i class="fa fa-plus me-2"></i>Nouveau fournisseur</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
