{% extends 'base.html.twig' %}

{% block title %}Dashboard - Mercuriale.io{% endblock %}

{% block body %}
<div style="font-family: sans-serif; padding: 20px;">
    <header style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; padding-bottom: 20px; border-bottom: 1px solid #eee;">
        <h1 style="margin: 0; color: #333;">Mercuriale.io</h1>
        <div>
            <span style="color: #666; margin-right: 15px;">{{ app.user.fullName }}</span>
            <a href="{{ path('app_logout') }}" style="color: #dc3545; text-decoration: none;">Déconnexion</a>
        </div>
    </header>

    <main>
        <h2 style="color: #333;">Tableau de bord</h2>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #007bff;">
                <h3 style="margin: 0 0 10px 0; color: #333;">Bons de livraison</h3>
                <p style="margin: 0; color: #666;">Gérer les bons de livraison</p>
            </div>

            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #28a745;">
                <h3 style="margin: 0 0 10px 0; color: #333;">Mercuriale</h3>
                <p style="margin: 0; color: #666;">Consulter la mercuriale</p>
            </div>

            <div style="background: #f8f9fa; padding: 20px; border-radius: 8px; border-left: 4px solid #ffc107;">
                <h3 style="margin: 0 0 10px 0; color: #333;">Alertes</h3>
                <p style="margin: 0; color: #666;">Voir les alertes prix</p>
            </div>
        </div>
    </main>
</div>
{% endblock %}
