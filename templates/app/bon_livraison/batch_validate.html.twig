{% extends 'base.html.twig' %}

{% block title %}Validation des BL - Mercuriale.io{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin-hub.css') }}">
{% endblock %}

{% block app_header %}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-100 to-gray-200 py-8 px-4">
    <div class="max-w-6xl mx-auto">
        {% include 'admin/components/_breadcrumb.html.twig' with {
            breadcrumbs: [
                { label: 'Bons de livraison', url: path('admin_hub_bl') },
                { label: 'Validation lot' }
            ]
        } %}

        {# Header #}
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 mb-1">
                    <i class="fas fa-tasks mr-2"></i>Validation des bons de livraison
                </h1>
                <p class="text-gray-500">{{ bonsLivraison|length }} BL a valider</p>
            </div>
            <a href="{{ path('app_bl_upload') }}" class="btn btn--outline btn--sm">
                <i class="fas fa-plus"></i>
                Ajouter d'autres BL
            </a>
        </div>

        {# Flash messages #}
        {% for flash_message in app.flashes('error') %}
            <div class="flex items-center gap-3 p-4 mb-4 bg-red-50 text-red-800 border border-red-200 rounded-xl">
                <i class="fas fa-exclamation-circle"></i>
                <span>{{ flash_message }}</span>
            </div>
        {% endfor %}

        {% for flash_message in app.flashes('success') %}
            <div class="flex items-center gap-3 p-4 mb-4 bg-green-50 text-green-800 border border-green-200 rounded-xl">
                <i class="fas fa-check-circle"></i>
                <span>{{ flash_message }}</span>
            </div>
        {% endfor %}

        {% for flash_message in app.flashes('warning') %}
            <div class="flex items-center gap-3 p-4 mb-4 bg-amber-50 text-amber-800 border border-amber-200 rounded-xl">
                <i class="fas fa-exclamation-triangle"></i>
                <span>{{ flash_message }}</span>
            </div>
        {% endfor %}

        {# Grid of BL cards #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for bl in bonsLivraison %}
                <div class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                    {# Image preview #}
                    <div class="aspect-[4/3] bg-gray-100 relative overflow-hidden">
                        {% if bl.imagePath %}
                            <img src="{{ path('app_bl_image', {'id': bl.id}) }}"
                                 alt="BL #{{ bl.id }}"
                                 class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full flex items-center justify-center text-gray-400">
                                <i class="fas fa-image text-4xl"></i>
                            </div>
                        {% endif %}

                        {# Status badge #}
                        <div class="absolute top-3 right-3">
                            <span class="px-3 py-1 text-xs font-semibold rounded-full
                                {% if bl.statut.value == 'BROUILLON' %}
                                    bg-gray-100 text-gray-700
                                {% elseif bl.statut.value == 'VALIDE' %}
                                    bg-green-100 text-green-700
                                {% else %}
                                    bg-amber-100 text-amber-700
                                {% endif %}
                            ">
                                {{ bl.statut.value }}
                            </span>
                        </div>
                    </div>

                    {# Card content #}
                    <div class="p-4">
                        <div class="flex items-start justify-between mb-3">
                            <div>
                                <h3 class="font-semibold text-gray-900">BL #{{ bl.id }}</h3>
                                <p class="text-sm text-gray-500">{{ bl.etablissement.nom }}</p>
                            </div>
                            <span class="text-sm text-gray-500">
                                {{ bl.dateLivraison|date('d/m/Y') }}
                            </span>
                        </div>

                        {# Metadata #}
                        <div class="flex items-center gap-4 text-xs text-gray-500 mb-4">
                            <span>
                                <i class="fas fa-user mr-1"></i>
                                {{ bl.createdBy.email|default('Inconnu') }}
                            </span>
                            <span>
                                <i class="fas fa-clock mr-1"></i>
                                {{ bl.createdAt|date('H:i') }}
                            </span>
                        </div>

                        {# Action button #}
                        <a href="{{ path('app_bl_validate', {'id': bl.id}) }}" class="btn btn--primary btn--full">
                            <i class="fas fa-magic"></i>
                            Valider ce BL
                        </a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-12">
                    <div class="text-gray-400 mb-4">
                        <i class="fas fa-inbox text-5xl"></i>
                    </div>
                    <p class="text-gray-500">Aucun bon de livraison a valider</p>
                    <a href="{{ path('app_bl_upload') }}" class="btn btn--secondary mt-4">
                        <i class="fas fa-plus"></i>
                        Uploader des BL
                    </a>
                </div>
            {% endfor %}
        </div>

    </div>
</div>
{% endblock %}
